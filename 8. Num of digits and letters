#include <iostream>

int main() {
  std::string x;
  int a = 0,b = 0;
  std::cout << "Enter the Word : ";
  std::cin>>x;
  for(int i=0;i<x.length();i++){
    if(isdigit(x[i])){
      a++;
    }
    else if(isalpha(x[i])){
      b++;
    }
  }
  std::cout<<"Letters : "<< b << std::endl<< "Numbers : "<< a;
}
